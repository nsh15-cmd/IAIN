<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:iainadmin"
             x:Class="iainadmin.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                    
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="bgColor">White</Color>
            <Color x:Key="button">#707FDD</Color>
            <Color x:Key="primaryColor">#5A67BA</Color>
            <Color x:Key="secondaryColor">#273240</Color>
            <Color x:Key="backgroundSidebar">#E0E2EB</Color>
            <Color x:Key="textSidebarColor">#737B8B</Color>
            <Color x:Key="textColor">#737B8B</Color>


            <x:Double x:Key="fontSizeRegular">12</x:Double>
            <x:Double x:Key="fontSizeMedium">14</x:Double>
            <x:Double x:Key="fontSizeSixteen">16</x:Double>
            <x:Double x:Key="fontSizeLarge">20</x:Double>
            <x:Double x:Key="fontSizeSaks">13</x:Double>


            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource fontSizeSixteen}"/>
                <Setter Property="TextColor" Value="{StaticResource primaryColor}" />
                <Setter Property="FontFamily" Value="PoppinsRegular" />
            </Style>

            <Style x:Key="baseLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource fontSizeMedium}"/>
                <Setter Property="TextColor" Value="{StaticResource primaryColor}" />
                <Setter Property="FontFamily" Value="PoppinsRegular" />
            </Style>

            <Style x:Key="infoLabelStyle" TargetType="Label">
                <Setter Property="FontAttributes" Value="None" />
                <Setter Property="FontSize" Value="{StaticResource fontSizeRegular}" />
                <Setter Property="TextColor" Value="{StaticResource primaryColor}" />
                <Setter Property="FontFamily" Value="PoppinsRegular" />
            </Style>

            <Style x:Key="Text" TargetType="Label">
                <Setter Property="FontAttributes" Value="None" />
                <Setter Property="FontSize" Value="{StaticResource fontSizeSaks}" />
                <Setter Property="TextColor" Value="{StaticResource textColor}" />
                <Setter Property="FontFamily" Value="PoppinsRegular" />
            </Style>

            <Style x:Key="Name" TargetType="Label">
                <Setter Property="FontAttributes" Value="None" />
                <Setter Property="FontSize" Value="{StaticResource fontSizeRegular}" />
                <Setter Property="TextColor" Value="{StaticResource secondaryColor}" />
                <Setter Property="FontFamily" Value="PoppinsRegular" />
            </Style>

            <Style x:Key="headlineLabelStyle"  TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource fontSizeMedium}"/>
                <Setter Property="TextColor" Value="{StaticResource secondaryColor}" />
                <Setter Property="FontFamily" Value="PoppinsMedium" />
            </Style>

            <Style x:Key="headerlineLabelStyle"  TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource fontSizeLarge}"/>
                <Setter Property="TextColor" Value="{StaticResource button}" />
                <Setter Property="FontFamily" Value="PoppinsRegular" />
            </Style>

            <Style x:Key="sidebarLabelStyle"  TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource fontSizeMedium}"/>
                <Setter Property="TextColor" Value="{StaticResource textSidebarColor}" />
                <Setter Property="FontFamily" Value="PoppinsRegular" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
